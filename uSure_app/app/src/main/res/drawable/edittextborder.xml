<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Agrega la sombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4B737373" /> <!-- Color de la sombra (negro con transparencia) -->
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- Agrega el fondo principal -->
    <item  android:left="1dp" android:right="1dp" android:bottom="3dp">
        <shape>
            <solid android:color="@color/background" />
            <stroke
                android:width="2dp"
                android:color="@color/lightMaroon" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>
